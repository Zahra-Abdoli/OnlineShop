@model OnlineShop.Core.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}
    <form asp-controller="Home" asp-action="Index" method="get">
        <p>
            <input type="text" name="searchString">
            <input type="submit" value="Search" />
        </p>
    </form>

<h1>Categorys</h1>

@foreach (var item in Model.productCategories)
{
    <div class="col-md-4" style="height:450px; padding:10px; border:solid thin whitesmoke ;">

        <div class="col-md-12">

            <strong>@Html.ActionLink(item.CategoryName, "Sort", new { categoryName = item.CategoryName })</strong>


        </div>

    </div>

}

    @foreach (var item in Model.products)
    {
<div class="col-md-4" style="height:450px; padding:10px; margin:10px; border:solid thin whitesmoke">
    <div class="col-md-12">
        <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
    </div>
    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
    </div>
    <div class="col-md-12">
        <p>@item.Description</p>
    </div>
    @if (item.Discount != 0)
    {
        <div class="col-md-12">
            <h4 style="color:red">@item.Discount % Discount</h4>
        </div>
        <div class="col-md-12">
            <h4 style="text-decoration:line-through">@(item.Price*100/(100-item.Discount))</h4>
        </div>
        <div class="col-md-12">

            <h4 style="color:forestgreen"> @item.Price</h4>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <h4>@item.Price</h4>
        </div>

    }
  
</div>
            
         }
<div class="col-md-12 clearfix">